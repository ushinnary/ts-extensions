{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "files": {
    "ignore": ["./tests/**"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "lineWidth": 80,
    "indentStyle": "tab",
    "indentWidth": 2,
    "formatWithErrors": false
  },
  "linter": {
    "rules": {
      "all": true,
      "nursery": {},
      "style": {
        "useNamingConvention": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "trailingComma": "all",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
