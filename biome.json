{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "lineWidth": 80,
    "indentStyle": "tab",
    "indentWidth": 4,
    "formatWithErrors": false,
    "attributePosition": "multiline"
  },
  "linter": {
    "rules": {
      "all": true,
      "nursery": {},
      "style": {
        "useNamingConvention": "off"
      }
    },
    "ignore": [
      "./tests/**"
    ]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
