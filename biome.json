{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"files": {},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineWidth": 70,
		"indentStyle": "tab",
		"indentWidth": 2,
		"formatWithErrors": false,
		"attributePosition": "multiline"
	},
	"linter": {
		"rules": {
			"all": true,
			"nursery": {},
			"style": {
				"useNamingConvention": "off"
			}
		},
		"ignore": ["./tests/**"]
	},
	"javascript": {
		"formatter": {
			"trailingComma": "all",
			"semicolons": "always"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
